<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>
    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/Dark-Light.css">
    <link href="../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />

  </head>
  <body>
    <%- include('../Components/Dark-Light.ejs') %>

    <main class="d-flex flex-nowrap">

      <%- include('../Components/SideBar.ejs',{currentpage:'add'}) %>

      <section class="w-100">
        <%- include('../Components/NavBar.ejs') %>

        <form action='/' method="post" class="mx-0 row gx-3 gy-4 mt-3">
          <div class="col-md-6">
            <label for="inputfirstName4" class="form-label">First Name:</label>
            <input
              placeholder="passant..."
              type="text"
              class="form-control"
              id="inputfirstName4"
              name="firstName"
            />
          </div>
          <div class="col-md-6">
            <label for="inputlastName4" class="form-label">Last Name:</label>
            <input
              placeholder="Yasser..."
              type="text"
              class="form-control"
              id="inputlastName4"
              name="lastName"

            />
          </div>

          <div class="col-md-6">
            <label for="inputemail4" class="form-label">Email:</label>
            <input
              placeholder="Passant@gmail.com"
              type="email"
              class="form-control"
              id="inputemail4"
              name="email"
            />
          </div>
          <div class="col-md-6">
            <label for="inputtele4" class="form-label">Telephone:</label>
            <input
              placeholder="011984479"
              type="number"
              class="form-control"
              id="inputtele4"
              name="phoneNumber"
            />
          </div>

          <div>
            <div class="col-md-6">
              <label for="inputage4" class="form-label">Age:</label>
              <input
                placeholder="Your Age: ..."
                type="number"
                class="form-control"
                id="inputage4"
                name="age"
              />
            </div>
          </div>

          <div>
            <div class="col-md-6">
              <label for="inputCountry" class="form-label">Country:</label>
              <select id="inputCountry" class="form-select"
                name="country"
                >
                <option selected hidden disabled>Choose here ...</option>

                <option>Morocco</option>
                <option>Egypt</option>
              </select>
            </div>
          </div>

          <div>
            <div class="col-md-6">
              <label for="inputGender" class="form-label">Gender:</label>
              <select id="inputGender" class="form-select"
                  name="gender">
                <option selected hidden disabled>Choose here ...</option>
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>

      </section>
    </main>


    <script src="../js/bootstrap.bundle.min.js"></script>
    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
